<aura:component >

    <aura:handler name="init" 
                  value="{!this}" 
                  action="{!c.doInit}"
                  />

    <aura:attribute name="item" 
                    type="Camping_Item__c"
                    />

    <aura:attribute name="formatdate" 
                    type="Date"
                    />

    <lightning:card title="{!v.items.Name}" 
                    iconName="standard:scan_card" >

        <aura:set attribute="footer">
            <p>Date: <lightning:formattedDateTime value="{!v.formatdate}"/></p>
            <p class="slds-text-title"><lightning:relativeDateTime value="{!v.formatdate}"/></p>
        </aura:set>

        <p class="slds-text-heading--medium slds-p-horizontal--small">
            Price: <lightning:formattedNumber value="{!v.items.Price__c}" style="currency"/>
        </p>

        <p class="slds-p-horizontal--small">
            Quantity: {!v.items.Quantity__c}
        </p>
        <p class="slds-p-horizontal--small">
            Price: {!v.items.Price__c}
        </p>
        <p class="slds-p-horizontal--small">
            Packed: {!v.items.Packed__c}
        </p>

    </lightning:card>

</aura:component>